" Appearance
set guifont=IBM\ Plex\ Mono\ 12
set guioptions=c

" Change some highlights in the default colorscheme
hi Title guifg=#0000ff
hi String guifg=DarkRed

" Disable bell sounds
set noerrorbells
set vb t_vb= 

" Clipboard shared with system
set clipboard=unnamedplus

" Command to update gvim's configuration
command! GRefreshVim source $MYGVIMRC

" Initial window size
set columns=100
set lines=50
