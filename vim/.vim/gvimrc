" Appearance
"set guifont=IBM\ Plex\ Mono\ 12
set guifont=JetBrains\ Mono\ 13
set guioptions=c

set background=light
colorscheme IDLE

" Disable bell sounds
set noerrorbells
set vb t_vb= 

" Clipboard shared with system
set clipboard=unnamedplus

" Command to update gvim's configuration
command! GRefreshVim source $MYGVIMRC

" Initial window size
set columns=100
set lines=50
